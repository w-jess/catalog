<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="catalog_deal_tree_view" model="ir.ui.view">
        <field name="name">库存列表</field>
        <field name="model">catalog.deal</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="provider_name"/>
                <field name="brand"/>
                <field name="barcode"/>
                <field name="spec"/>
                <field name="cost"/>
                <field name="shipping"/>
                <field name="quantity"/>
                <field name="create_user_id"/>
            </tree>
        </field>
    </record>

    <record id="catalog_deal_form_view" model="ir.ui.view">
        <field name="name">库存列表</field>
        <field name="model">catalog.deal</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="provider_name"/>
                            <field name="brand"/>
                            <field name="provider_site"/>
                            <field name="barcode"/>
                        </group>
                        <group>
                            <field name="spec"/>
                            <field name="cost"/>
                            <field name="shipping"/>
                            <field name="quantity"/>
                            <field name="create_user_id"/>
                        </group>
                    </group>
                    <notebook>
                                <page string="说明">
                                    <field name="note"/>
                                </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

